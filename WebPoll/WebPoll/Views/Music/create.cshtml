@model WebPoll.Model.Models.Music
@using WebPoll.Model.Models;

@{
	ViewData["Title"] = "create";
	Layout = "~/Views/Shared/_Layout.cshtml";

	var artists = ViewData["Artists"] as ICollection<Artist>;
	var genres = ViewData["Genres"] as ICollection<Genre>;

	}

<h2>create</h2>

<h4>Music</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
			<div class="form-group">
				<label asp-for="Artist" class="control-label"></label>
				<select asp-for="Artist.Name" asp- class="form-control" >
					@{
						foreach (Artist a in artists)
						{
							<option value=@a.Name>@a.Name</option>
						}
					}
				</select> 
			</div>
			<div class="form-group">
				<label asp-for="Genre" class="control-label"></label>
				<select asp-for="Genre.Name" class="form-control">
					@{
						foreach (Genre a in genres)
						{
							<option value=@a.Name>@a.Name</option>
						}
					}
				</select>
			</div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

